<div class="ws-minicart">
			<div class="wrapper">
				<h1>{{ 'cart.minicart.cart_title' | t }}</h1>
				<a href="#" class="only-lg minicart-continue-message">{{ 'cart.minicart.continue_shopping_message' | t }}</a>
                <button class="minicart-closes open-offcanvas">&#215;</button>

				<template v-if="cart && cart.items.length > 0">
                    <div class="minicart-items-loop">
                    
                        <div class="minicart-items-header">
                            <p>Price</p>
                            <p>Quantity</p>
                            <p>Total</p>
                        </div>
                    
                                        <!-- usar grid aqui -->
                        <div class="minicart-item-single" v-for="item in cart.items">
                            <div class="item-single-img">
                                <img :src="item.image" :alt="item.title" />
                            </div>
                            <div class="item-single-description">
                                        <div>
                                            <p class="product-title"> ${ item.title }</p>
                                            <p class="product-variant">${ item.options_by_name }</p>
                                            <a href="#" class="product-remove only-lg" @click="removeCartItem(item)">{{ "cart.minicart.remove_item_label" | t }}</a>
                                        </div>
            
                                        <div>
                                            <p class="product-price-single only-lg">${ money(item.price) }</p>
                                            <div class="product-quantity"><input type="text" v-model="item.quantity"></div>
                                            <p class="product-price-total">${ money( item.price * item.quantity ) }</p>
                                        </div>
                                                
                                            </div>
                        </div>
                    </div>

                    <div class="minicart-footer">
                        <div class="minicart-ordernote-container">
                            <form action="">
                                <label for="minicart-ordernote">{{ "cart.minicart.order_note" | t }}</label>
                                <textarea id="minicart-ordernote" wrap="off" name="minicart-ordernote" v-model="note"></textarea>
                            </form>
                        </div>
                        <div class="minicart-subtotal">
                            <h2>{{ "cart.minicart.sub_total" | t }}</h2>
                            <p>${ money(cart.total_price) }</p>
                        </div>
                        <div class="minicart-meta">
                            <p>{{ "cart.minicart.pre_checkout_message" | t }}</p>
                            <a href="" class="minicart-update only-lg">{{ "cart.minicart.update_cart_label" | t }}</a>
                            <a href="" class="minicart-checkout">{{ "cart.minicart.checkout_label" | t }}</a>
                        </div>
                    </div>


                </template>
                
			</div>
		</div>